<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/linearLayout421"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00008B"
                android:text="PAST"
                android:textColor="#00FF7F"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnVend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Past" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout414"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00008B"
                android:text="CURRENT"
                android:textColor="#00FF7F"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plan" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout416"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00008B"
                android:text="FUTURE"
                android:textColor="#00FF7F"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnFuture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Future" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout41"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="70dp"
        android:background="#00008B"
        android:text="@string/hello_world"
        android:textColor="#00FF7F"
        android:textSize="46sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView10"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:background="#00008B"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="Your Personal Activity Planning Assistant . . . . . . . "
        android:textColor="#00FF7F"
        android:textSize="24sp" />

</RelativeLayout>